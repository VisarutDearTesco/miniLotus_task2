<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.visarut.minilotus_task2.view.feature.featureDeliveryHome.DeliveryHomePageViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.feature.featureDeliveryHome.DeliveryHomePageFragment"
        >


        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            app:itemTextColor="#FFFFFF"
            app:itemIconTint="#D3D1D8"
            app:itemIconSize="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/bottommenu" />

        <LinearLayout
            android:id="@+id/top_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:weightSum="7"
            android:layout_margin="24dp">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_menu_24"
                android:layout_weight="1"

                style="@style/Widget.App.Button.OutlinedButton.IconOnly" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="5">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Deliver to"
                    android:textStyle="bold"
                    android:textSize="24dp"
                    android:gravity="center"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4102 Preety View Lane"
                    android:textColor="@color/text_secondary"
                    android:gravity="center" />
            </LinearLayout>

            <ImageView
                android:id="@+id/profileImg"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_baseline_supervised_user_circle_24"
                android:layout_weight="1"
                android:layout_gravity="center" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_header"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:text="What Would you like to order"
            android:textColor="@color/text_primary"
            android:textSize="32dp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.168"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@+id/top_navigation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_navigation" />

        <LinearLayout
            android:id="@+id/searchFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/tv_header"
            app:layout_constraintTop_toBottomOf="@+id/tv_header"
            android:orientation="horizontal"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="24dp"
            android:weightSum="4"
            android:gravity="center"
            >

            <EditText
                android:id="@+id/et_search"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="3"
                android:drawableStart="@drawable/ic_baseline_search_24"
                android:hint="Find for food or restaurant..."
                android:textSize="14dp"
                android:paddingLeft="24dp"
                android:background="@drawable/box"
                />

            <ImageButton
                android:id="@+id/ib_filter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_filter_list_24"
                android:layout_weight="1"
                style="@style/Widget.App.Button.OutlinedButton.IconOnly" />

        </LinearLayout>

        <com.airbnb.epoxy.EpoxyRecyclerView
            android:id="@+id/epoxy_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            app:layout_constraintStart_toEndOf="@+id/searchFilter"
            app:layout_constraintTop_toBottomOf="@+id/searchFilter" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>