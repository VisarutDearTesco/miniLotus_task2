<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp">



        <TextView
            android:id="@+id/tv_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ratingbox"
            android:text="4.5"
            android:drawableRight="@drawable/ic_baseline_star_24"
            android:elevation="3dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="10dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:gravity="center_vertical"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/circle"
            android:src="@drawable/ic_baseline_favorite_24"
            android:elevation="3dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="260dp"
            android:padding="8dp"
            />


        <androidx.cardview.widget.CardView
            android:id="@+id/cv_image"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/img_1"

                android:translationZ="2dp"
                />

        </androidx.cardview.widget.CardView>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/cv_image"
                app:layout_constraintTop_toBottomOf="@id/cv_image"
                app:layout_constraintRight_toRightOf="@id/cv_image"
                android:orientation="vertical"
                android:layout_margin="8dp"
                >

                <TextView
                    android:id="@+id/tv_resName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="McDonald's"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="@id/tv_resName"
                    app:layout_constraintTop_toBottomOf="@id/tv_resName"
                    app:layout_constraintRight_toRightOf="@id/tv_resName"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp"
                    >
                    <TextView
                        android:id="@+id/tv_delivery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/free_delivery"
                        android:textSize="16dp"
                        android:textColor="@color/grey"
                        android:drawableLeft="@drawable/ic_baseline_moped_24"
                        android:drawablePadding="6dp"
                        />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10-15 mins"
                        android:textSize="16dp"
                        android:textColor="@color/grey"
                        android:drawableLeft="@drawable/ic_baseline_timer_24"
                        android:drawablePadding="6dp"
                        android:paddingLeft="8dp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/tv_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="@id/tv_resName"
                    app:layout_constraintTop_toBottomOf="@id/tv_resName"
                    app:layout_constraintRight_toRightOf="@id/tv_resName"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BURGER"
                        android:textSize="16dp"
                        android:textColor="@color/grey"
                        android:layout_margin="8dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CHICKEN"
                        android:textSize="16dp"
                        android:textColor="@color/grey"
                        android:layout_margin="8dp"
                        android:paddingLeft="8dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FAST FOOD"
                        android:textSize="16dp"
                        android:textColor="@color/grey"
                        android:layout_margin="8dp"
                        android:paddingLeft="8dp"
                        />


                </LinearLayout>



            </LinearLayout>










    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>