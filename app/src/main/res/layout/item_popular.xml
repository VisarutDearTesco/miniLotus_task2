<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        >

        <TextView
            android:id="@+id/tv_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ratingbox"
            android:text="9.5"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:drawableStart="@drawable/ic_baseline_attach_money_24"
            android:elevation="3dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="10dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:gravity="center_vertical"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_image"
            android:layout_width="175dp"
            android:layout_height="150dp"
            app:cardCornerRadius="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/img_1"
                />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/cv_image"
            app:layout_constraintTop_toBottomOf="@id/cv_image"
            app:layout_constraintLeft_toRightOf="@id/cv_image"
            android:orientation="vertical"
            android:layout_margin="8dp"
            >

            <TextView
                android:id="@+id/tv_resName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Greek salad"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                />

            <TextView
                android:id="@+id/tv_descript"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="with baked salmon"
                android:textSize="18dp"
                android:textColor="@color/grey"
                />





        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>